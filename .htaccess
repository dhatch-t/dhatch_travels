# Disable server signature and tokens for security
ServerSignature Off
ServerTokens Prod

# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS and redirect www to non-www
    RewriteCond %{HTTPS} off [OR]
    RewriteCond %{HTTP_HOST} ^www\.
    RewriteRule ^(.*)$ https://dhatchtravels.com/$1 [L,R=301]

    # Rewrite clean URLs to .html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([a-zA-Z0-9_-]+)$ $1.html [NC,L]

    # Redirect .html URLs to clean URLs
    RewriteCond %{THE_REQUEST} \s/([a-zA-Z0-9_-]+)\.html\s [NC]
    RewriteRule ^([a-zA-Z0-9_-]+)\.html$ /$1 [R=301,L]
</IfModule>

# Enable caching for static resources
<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|css|js|ico|woff|woff2|ttf|svg|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "no-referrer-when-downgrade"
    Header always unset X-Powered-By
</IfModule>
